{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@utils/*": ["./src/utils/*"],
      "interfaces/*": ["./src/interfaces/*"],
      "@middlewares/*": ["./src/middlewares/*"]
    }
  }
}
